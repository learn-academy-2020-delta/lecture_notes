<h3>Add a New Herb</h3>
<%= form_with url: '/herbs', local: true do |form| %>

  <%= form.label :name %>
  <%= form.text_field :name %>

  <br>
  <%= form.radio_button :is_watered, "yes" %>
  <%= form.label :is_watered, "Herb is watered" %>

  <br>
  <%= form.radio_button :is_watered, "no" %>
  <%= form.label :is_watered, "Herb is NOT watered" %>

  <br>
  <%= form.submit 'Add Herb' %>
  <%= form.submit "clear", :type => "reset" %>
<% end %>

<br>
<p>Back to: <%= link_to "all the herb", herbs_path %></p>
